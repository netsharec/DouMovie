<?xml version="1.0" encoding="utf-8"?>
<transitionSet xmlns:android="http://schemas.android.com/apk/res/android">

    <slide android:slideEdge="top" android:duration="400">
        <targets>
            <target android:targetId="@id/iv_detail_header"/>
        </targets>
    </slide>

    <slide android:slideEdge="bottom" android:duration="400">
        <targets>
            <target android:targetId="@id/layout_detail_content"/>
        </targets>
    </slide>

    <fade android:duration="400">
        <targets>
            <target android:excludeId="@android:id/statusBarBackground"/>
            <target android:excludeId="@android:id/navigationBarBackground"/>
        </targets>
    </fade>

</transitionSet>